---
const { folder } = Astro.props;
const url = Astro.url.pathname;
const fullPath = `${url}${url.endsWith('/') ? '' : '/'}${folder}`;
---

<a href={fullPath} 
   class="group inline-block 
          transform -skew-x-12 
          py-2 px-2
          rounded-sm 
          shadow-lg 
          transition duration-100 ease-in-out
          focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 
          bg-zinc-700 hover:bg-indigo-500 focus:bg-zinc-700 
          dark:hover:bg-indigo-900 dark:focus:ring-offset-indigo-900"
>
    <div class="flex items-center transform skew-x-12 
                text-center 
                cursor-pointer 
                prose 
                dark:prose-invert"
    >
        <span class="transition-transform duration-100 ease-in-out group-hover:-translate-x-2">
            /{folder}
        </span>
    </div>
</a>