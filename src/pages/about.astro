---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
	firstName: "Adrian",
	country: "Spain",
	occupation: "byte alchemist",
	hobbies: ["AI", "Programming", "baseball"],
};

const skills = ["Creativity", "Relentlessness"];
---

<BaseLayout pageTitle={pageTitle}>
	<div>
		<ul class="space-y-2">
			<li>
				My name is {identity.firstName}.
			</li>
			<li>
				I live in {identity.country} and I work as a {
					identity.occupation
				}.
			</li>
		</ul>
		<p class="mt-4">My skills are:</p>
		<ul class="space-y-2">
			{
				identity.hobbies.map((hobby) => (
					<li>- {hobby}</li>
				))
			}
		</ul>
		<p class="mt-4">My skills are:</p>
		<ul class="space-y-2">
			{
				skills.map((skill) => (
					<li>- {skill}</li>
				))
			}
		</ul>
	</div>
</BaseLayout>
